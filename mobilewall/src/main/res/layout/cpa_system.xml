<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="2dp"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/l_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FF5B0A"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtPayType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:gravity="center"
            android:text="Try Free Applications"
            android:textColor="@color/button"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_exit"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical|center_horizontal"
            android:background="@drawable/btn_close_x"
            android:gravity="right" />

    </LinearLayout>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:divider="#237FBF"
        android:dividerHeight="1dp"
        android:footerDividersEnabled="false" >
    </ListView>

    <LinearLayout
        android:id="@+id/l_footer"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:background="#FF5B0A"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/copyright"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>